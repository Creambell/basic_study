    <script>
    document.addEventListener('DOMContentLoaded', function() {
       
        // 새로운 코드: 체크박스 스위치 클릭 시 모달 표시
        const statusSwitches = document.querySelectorAll('.status-switch');
        const modal = new bootstrap.Modal(document.getElementById('exampleModal'));

        statusSwitches.forEach(statusSwitch => {
            statusSwitch.addEventListener('click', function(e) {
                e.preventDefault(); // 체크박스의 기본 동작을 막습니다.
                modal.show(); // 모달을 표시합니다.

                // 모달의 "네" 버튼에 이벤트 리스너 추가
                const confirmButton = document.querySelector('#exampleModal .btn-primary');
                confirmButton.onclick = () => {
                    this.checked = !this.checked; // 체크박스 상태를 토글합니다.
                    modal.hide(); // 모달을 닫습니다.
                };

                // 모달의 "아니요" 버튼과 닫기 버튼에 이벤트 리스너 추가
                const cancelButton = document.querySelector('#exampleModal .btn-secondary');
                const closeButton = document.querySelector('#exampleModal .btn-close');
                
                const closeModal = () => {
                    modal.hide();
                };

                cancelButton.onclick = closeModal;
                closeButton.onclick = closeModal;
            });
        });
    });
        
    
    
    
    
    
        // 검색 AJAX로 구현하자
        
        
        
        
        
        
        
        
        
        
        
        
        
    </script>
